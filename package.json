{
  "name": "salesmart-ecommerce",
  "version": "1.0.0",
  "description": "SalesMart - A complete e-commerce platform with AI-powered recommendations",
  "main": "server/server.js",
  "scripts": {
    "setup": "node setup.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "seed": "cd server && npm run seed",
    "start": "cd server && npm start"
  },
  "keywords": ["ecommerce", "mern", "mongodb", "express", "react", "nodejs", "ai", "recommendations"],
  "author": "SalesMart Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}